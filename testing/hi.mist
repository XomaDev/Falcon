global membersAge = [17, 32, 89, 12, 35, 15, 67, 45, 4]

func CountChildren() = {
  this.membersAge
    .filter { n -> n < 18 }
    .listLen()
}

func MedianAdultAge() = {
  local adults = this.membersAge.filter { n -> n >= 18 }.sort()
  local len = adults.listLen()
  if (rem(len, 2) == 1) {
    adults[(len + 1) / 2]
  } else {
    (adults[len / 2] + adults[(len / 2) + 1]) / 2
  }
}

println("Children: " _ CountChildren())
println("Median adult age: " _ MedianAdultAge())
